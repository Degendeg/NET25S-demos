<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="AvaloniaDemo.MainWindow"
        mc:Ignorable="d"
        Width="400"
        SizeToContent="Height"
        Title="Simple Avalonia Demo"
        Icon="Assets/appIcon.ico"
>
  <StackPanel Margin="20" Spacing="10">
    <TextBox Name="InputText" Watermark="Skriv något här..." />
    <TextBox Name="ImageUrlBox" Watermark="https://i.pravatar.cc/300" />
    <Button Name="ShowButton" Content="Visa meddelande och bild"/>
    <TextBlock Name="OutputText" FontSize="20"/>
    <Image Name="OutputImage" Width="200" Height="200"/>
  </StackPanel>
</Window>
