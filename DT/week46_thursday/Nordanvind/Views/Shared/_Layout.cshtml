<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Nordanvind</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Nordanvind.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container position-relative">
                @* Mobile version *@
                <a class="navbar-brand 
           position-absolute start-50 translate-middle-x d-sm-none 
           d-block" asp-area="" asp-controller="Home" asp-action="Index">
                    Nordanvind
                </a>
                @* Desktop version *@
                <a class="navbar-brand d-block d-sm-none position-absolute start-50 translate-middle-x" asp-area=""
                    asp-controller="Home" asp-action="Index">
                    Nordanvind
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers"
                                asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products"
                                asp-action="Index">Products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - Nordanvind
        </div>
    </footer>
    <button id="scrollToTopBtn" class="btn btn-secondary position-fixed bottom-0 end-0 m-4">↑</button>
    <script>
        const btn = document.getElementById('scrollToTopBtn');

        const toggleBtn = () => {
            const hasScroll = document.documentElement.scrollHeight > window.innerHeight;
            if (window.scrollY > 200 && hasScroll) {
                btn.style.display = "block";
            }
            else {
                btn.style.display = "none";
            }
        }

        window.addEventListener("scroll", toggleBtn);
        window.addEventListener("resize", toggleBtn);
        window.addEventListener("scroll", toggleBtn);

        btn.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        })
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>